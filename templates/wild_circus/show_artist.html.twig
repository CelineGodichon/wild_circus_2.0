{% extends 'base.html.twig' %}
{% block body %}
    <div class="container my-5 show-performance d-flex flex-column">
        <div class="performance-img-title my-5">
            <img src="/uploads/artist/{{ artist.imageName }}" alt="">
            <h1 class="typo-horror">{{ artist.nickname }}</h1>
        </div>

        <h3 class="my-5 typo-horror">Performances :</h3>
        <div class="row cards-list">
            {% for performance in artist.performances %}
                <div class="col-lg-4 col-md-6 col-sm-12 col-xs-12">
                    <div class="card m-1">
                        <img class="card-img-top" src="/uploads/performance/{{ performance.imageName }}"
                             alt="Card image cap">
                        <div class="card-body">
                            <h4 class="card-title">{{ performance.name }}</h4>
                            <p class="card-text ellipsis-text">{{ performance.description }} ...</p>
                            <p>{{ performance.date|date("d/m/Y H:i:s") }}</p>
                            <p>{{ performance.city.name }}</p>
                            <div class="d-flex justify-content-around">
                                <a href="{{ path('show_performance', {id : performance.id}) }}" class="btn btn-danger ">
                                    <i class="fas fa-eye"></i>
                                </a>
                                <a href="#" class="btn btn-primary ">Win a Ticket</a>
                            </div>
                        </div>
                    </div>
                </div>
            {% else %}
                No performance for this artist
            {% endfor %}
        </div>
    </div>
{% endblock %}