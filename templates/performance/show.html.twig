{% extends 'base.html.twig' %}

{% block title %}Performance{% endblock %}

{% block body %}
    <div class="container text-white">

    <h1>Performance</h1>

    <table class="table text-white">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ performance.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ performance.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ performance.description }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{{ performance.date ? performance.date|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>ImageName</th>
                <td>{{ performance.imageName }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('performance_index') }}">back to list</a>

    <a href="{{ path('performance_edit', {'id': performance.id}) }}">edit</a>

    {{ include('performance/_delete_form.html.twig') }}
    </div>
{% endblock %}
