{% extends 'base.html.twig' %}

{% block title %}Performance{% endblock %}

{% block body %}
    <div class="container text-white d-flex flex-column my-5">

        <h1 class="typo-horror">Performance</h1>

        <table class="table text-white">
            <tbody>
            <tr>
                <th>Id</th>
                <td>{{ performance.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ performance.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ performance.description }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{{ performance.date ? performance.date|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td>
                    <img class="admin-image" src="/uploads/performance/{{ performance.imageName }}" alt="">
                </td>
            </tr>
            </tbody>
        </table>
        <div class="d-flex align-self-center">

            <a href="{{ path('performance_index') }}" class="btn btn-primary"><i
                        class="fas fa-long-arrow-alt-left fa-2x"></i></a>

            <a href="{{ path('performance_edit', {'id': performance.id}) }}" class="btn btn-secondary"><i
                        class="fas fa-pen-nib fa-2x"></i></a>

            {{ include('performance/_delete_form.html.twig') }}
        </div>
    </div>
{% endblock %}
