{% extends 'base.html.twig' %}

{% block title %}City{% endblock %}

{% block body %}
    <div class="container text-white d-flex flex-column my-5">
        <h1>City</h1>

        <table class="table text-white">
            <tbody>
            <tr>
                <th>Id</th>
                <td>{{ city.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ city.name }}</td>
            </tr>
            </tbody>
        </table>
        <div class="d-flex align-self-center">
            <a href="{{ path('city_index') }}" class="btn btn-primary">
                <i class="fas fa-long-arrow-alt-left fa-2x"></i>
            </a>

            <a href="{{ path('city_edit', {'id': city.id}) }}" class="btn btn-secondary"><i
                        class="fas fa-pen-nib fa-2x"></i></a>

            {{ include('city/_delete_form.html.twig') }}
        </div>
    </div>
{% endblock %}
