{% extends 'base.html.twig' %}

{% block title %}Artist{% endblock %}

{% block body %}
    <div class="container text-white d-flex flex-column my-5">

        <h1 class="typo-horror">Artist</h1>

        <table class="table text-white">
            <tbody>
            <tr>
                <th>Id</th>
                <td>{{ artist.id }}</td>
            </tr>
            <tr>
                <th>Nickname</th>
                <td>{{ artist.nickname }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td>
                    <img class="admin-image" src="/uploads/artist/{{ artist.imageName }}" alt="">
                <td>
            </tr>
            </tbody>
        </table>
        <div class="d-flex align-self-center">

            <a href="{{ path('artist_index') }}" class="btn btn-primary"><i
                        class="fas fa-long-arrow-alt-left fa-2x"></i></a>

            <a href="{{ path('artist_edit', {'id': artist.id}) }}" class="btn btn-secondary"><i
                        class="fas fa-pen-nib fa-2x"></i></a>

            {{ include('artist/_delete_form.html.twig') }}
        </div>
    </div>
{% endblock %}
